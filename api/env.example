# =====================================================
# Railway Deployment Environment Variables
# =====================================================

# Django Core Settings
DJANGO_SECRET_KEY=your-secret-key-here
DEBUG=False  # Must be False for production
ALLOWED_HOSTS=your-railway-domain.up.railway.app,*.up.railway.app
CLIENT_CONFIG=yeshuman  # or bookedai, talentco, lumie

# Database (Railway auto-generates)
DATABASE_URL=postgresql://postgres:password@containers-us-west-1.railway.app:1234/railway

# OpenAI (Required)
OPENAI_API_KEY=your-openai-api-key-here

# LangSmith (Optional)
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=your-langsmith-api-key-here
LANGCHAIN_PROJECT=yeshuman-agent

# Railway-specific (Auto-generated)
# RAILWAY_PROJECT_ID=your-project-id
# RAILWAY_ENVIRONMENT=production
# RAILWAY_STATIC_URL=https://your-app.up.railway.app

# Development Fallbacks (not needed in Railway)
# POSTGRES_DB=yeshuman
# POSTGRES_USER=yeshuman
# POSTGRES_PASSWORD=password
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
